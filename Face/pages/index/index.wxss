.wrap {
  display: flex;
  position: absolute;
  padding-bottom: 200rpx;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  flex-direction: column;
}
.wrap .avatar {
  height: 750rpx;
}
.wrap .result {
  display: flex;
  flex: 1;
  margin: 20rpx 0;
  padding-left: 250rpx;
  flex-direction: column;
  justify-content: center;
}
.wrap image {
  width: 100%;
  height: 100%;
}
.wrap .btn {
  position: absolute;
  bottom: 40rpx;
  width: 600rpx;
  left: 75rpx;
}